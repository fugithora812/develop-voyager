{
  "env": {
    "browser": true,
    "es2021": true
  },
  "settings": {
    "react": {
      "version": "detect"
    }
  },
  "extends": [
    "next/core-web-vitals",
    "prettier"
  ],
  "overrides": [
    {
      "files": [
        "*.ts",
        "*.tsx"
      ],
      "rules": {
        "simple-import-sort/imports": [
          "error",
          {
            "groups": [
              [
                "^react",
                "^@?\\w"
              ],
              [
                "^@?\\w"
              ],
              [
                "^\\u0000"
              ],
              [
                "^\\.\\.(?!/?$)",
                "^\\.\\./?$"
              ],
              [
                "^\\.\\./(?=.*/)(?!/?$)",
                "^\\.\\./?$"
              ],
              [
                "^\\./(?=.*/)(?!/?$)",
                "^\\.\\./?$"
              ],
              [
                "^.+\\.s?css$"
              ],
              [
                "^.+\\.svg$"
              ],
              [
                "^.+\\.module\\.s?css$"
              ],
              [
                "^.+\\.module\\.svg$"
              ]
            ]
          }
        ]
      }
    }
  ],
  "plugins": [
    "simple-import-sort"
  ],
  "ignorePatterns": [
    "*.config.ts",
    "*.config.js",
    "next-env.d.ts"
  ],
  "rules": {
    "simple-import-sort/imports": "error",
    "simple-import-sort/exports": "error"
  }
}
